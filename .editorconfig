root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space

[*.{js,gs,py,md,txt}]
charset = utf-8

[*.{js,gs}]
indent_size = 2

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = 100
indent_size = 2

[{.gitignore,.editorconfig}]
charset = utf-8
indent_size = 4
